{
  "name": "@sloansparger/bear",
  "description": "Unofficial CLI for the Bear notes app (MacOS only)",
  "version": "0.1.3",
  "author": "Sloan Sparger @sloansparger",
  "license": "MIT",
  "repository": "sloansparger/bear",
  "homepage": "https://github.com/sloansparger/bear",
  "bugs": "https://github.com/sloansparger/bear/issues",
  "keywords": [
    "bear",
    "cli"
  ],
  "main": "lib/index.js",
  "bin": {
    "bear": "./bin/run"
  },
  "dependencies": {
    "@oclif/command": "^1.8.36",
    "@oclif/config": "^1.18.17",
    "@oclif/errors": "^1.3.6",
    "@oclif/plugin-autocomplete": "^0.3.0",
    "@oclif/plugin-commands": "^1.3.0",
    "@oclif/plugin-help": "^3.3.1",
    "@oclif/plugin-update": "^1.5.0",
    "conf": "^10.2.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.4.4",
    "@oclif/test": "^1.2.9",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.14",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "^1.0.3",
    "eslint-config-prettier": "^9.1.0",
    "globby": "^11.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "types": "lib/index.d.ts",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "bear",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-commands",
      "@oclif/plugin-update"
    ]
  },
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "copy-xcall": "cp -r ./src/utils/xcall/xcall.app lib/utils/xcall && cp ./src/utils/xcall/xcall-license.txt ./lib/utils/xcall/xcall-license.txt",
    "prepack": "rm -rf lib && tsc -b && npm run copy-xcall && oclif-dev manifest && oclif-dev readme",
    "test": "echo 'TODO'",
    "version": "oclif-dev readme && git add README.md"
  }
}
